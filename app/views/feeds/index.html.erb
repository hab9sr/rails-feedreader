<p id="notice"><%= notice %></p>

<h1>Feeds</h1>

<p>
  <%= link_to 'New Feed', new_feed_path %><br>
</p>

<table class="table">
  <thead>
    <tr>
      <th>Category</th>
      <th>Title</th>
      <th>Author</th>
      <th>Url</th>
      <th>Hide?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feeds.each do |feed| %>
      <tr>
        <td><%= feed.category.name %></td>
        <td><%= feed.title %></td>
        <td><%= feed.author %></td>
        <td><%= feed.url %></td>
        <td><%= feed.hide_in_all ? "Yes" : "No" %></td>
        <td><%= link_to 'Show', feed %></td>
        <td><%= link_to 'Edit', edit_feed_path(feed) %></td>
        <td><%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
